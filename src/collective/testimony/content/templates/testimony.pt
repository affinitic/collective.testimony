<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.testimony">
  <body>
    <metal:main fill-slot="main">
      <div class="content-block">
        <div class="content-block-container">
          <div class="content-block-container-background">
            <div class="content-block-body"
            tal:define="title context/Title;
                        textual context/textual_testimony;
                        url context/url;
                        video_transcript context/video_transcript">
              <h1 tal:content="title"></h1>
              <div tal:content="structure textual/output" tal:condition="textual"/>
              <div tal:replace="structure view/get_embed_link"/>
              <div tal:content="structure video_transcript/output" tal:condition="video_transcript"/>
            </div>
          </div>
        </div>
      </div>
    </metal:main>
  </body>
</html>
